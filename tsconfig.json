{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "preserve",
    "allowJs": true,
    "lib": [
      "es6",
      "es7",
      "dom",
      "es2017"
    ],
    "types": [
      "jest",
      "core-js",
      "react-css-modules"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "./src/*.tsx",
    "./src/**/*.tsx",
    "./src/**/**/*.tsx"
  ]
}